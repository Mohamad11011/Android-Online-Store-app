<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/graylow"
    tools:context=".Admin"
    >


    <Button
        android:id="@+id/btn_allUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="15dp"
        android:background="@color/colorYellow"
        android:padding="5dp"
        android:text="All Users"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Btn_RemoveUser"
        app:layout_constraintTop_toBottomOf="@+id/UserNameText"
        app:layout_constraintVertical_bias="0.0">

    </Button>

    <Button
        android:id="@+id/btn_alltem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:background="@color/colorYellow"
        android:padding="5dp"
        android:text="All Items"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/Btn_AddStore"
        app:layout_constraintEnd_toStartOf="@+id/Btn_AddStore"
        app:layout_constraintStart_toEndOf="@+id/Btn_RemoveStore"
        app:layout_constraintTop_toBottomOf="@+id/StorePriceText"
        app:layout_constraintVertical_bias="1.0">

    </Button>

    <RelativeLayout
        android:id="@+id/relativeLayout4"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/black"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Welcome Admin"
            android:textColor="@color/white"
            android:textSize="30dp">

        </TextView>
    </RelativeLayout>


    <Button
        android:id="@+id/Btn_AddStore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:width="100dp"
        android:height="40dp"
        android:background="@color/colorYellow"
        android:padding="5dp"
        android:text="Add Item"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/StorePriceText">

    </Button>

    <Button
        android:id="@+id/Btn_RemoveStore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:background="@color/colorYellow"
        android:padding="5dp"
        android:text="Remove Item"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/Btn_AddStore"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/StorePriceText"
        app:layout_constraintVertical_bias="1.0">

    </Button>

    <Button
        android:id="@+id/Btn_RemoveUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="15dp"
        android:background="@color/colorYellow"
        android:padding="5dp"
        android:text="Ban User"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/UserNameText"
        app:layout_constraintVertical_bias="0.0">

    </Button>

    <EditText
        android:id="@+id/UserNameText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="4dp"
        android:hint="Enter User's Name to Take Action"
        android:maxLines="1"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout90"
        app:layout_constraintVertical_bias="0.293"
        tools:layout_editor_absoluteX="0dp">

    </EditText>

    <EditText
        android:id="@+id/StorePriceText"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:hint="Enter Item's Price"
        android:maxLines="1"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/StoreNameText"
        tools:layout_editor_absoluteX="0dp">

    </EditText>

    <EditText
        android:id="@+id/StoreNameText"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="36dp"
        android:hint="Enter Item's Name"
        android:maxLines="1"

        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/Btn_UploadImageStore"
        tools:layout_editor_absoluteX="0dp">

    </EditText>

    <RelativeLayout
        android:id="@+id/relativeLayout90"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:background="@color/black"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/btn_alltem"
        app:layout_constraintTop_toBottomOf="@+id/Btn_RemoveStore"
        tools:layout_editor_absoluteX="0dp">

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorYellow"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout4">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Take Actions On Item"
            android:textAlignment="center"
            android:textSize="25dp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="-2dp">

        </TextView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="2dp"
        android:background="@color/colorYellow"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/UserNameText"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout90"
        app:layout_constraintVertical_bias="0.15"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:text="Take Actions On User"
            android:textAlignment="center"
            android:textSize="25dp"
            android:textStyle="bold"

            tools:layout_editor_absoluteX="0dp">

        </TextView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout10">

    </RelativeLayout>

    <ImageView
        android:id="@+id/PreviewImage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:background="@color/gray"
        app:layout_constraintBottom_toTopOf="@+id/StoreNameText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.899"
        app:layout_constraintStart_toEndOf="@+id/Btn_UploadImageStore"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout10"
        app:layout_constraintVertical_bias="0.352">

    </ImageView>

    <Button
        android:id="@+id/Btn_UploadImageStore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:background="@color/LampBlack"
        android:padding="2dp"
        android:text="Pick Item's Image"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.053"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout10">

    </Button>

    <RelativeLayout
        android:id="@+id/relativeLayout99"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/black"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/Btn_RemoveUser"
        app:layout_constraintTop_toBottomOf="@+id/Btn_RemoveUser"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="-14dp">

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>