@model List <Testing1.Models.Product>
@{
    ViewBag.Title = "List";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";

}

<br>
<h1 id="Catext" style="text-align: center;">WELCOME ADMIN</h1>

<br>
<br>

<h1> Add ,Remove & Update <a id="Highlight">Items</a> on Store</h1>
<br>
<br>
<br>
<h3> To <a id="Highlight">Add</a> an<a id="Highlight"> Item</a> on Store hit the following bottom</h3>
<br>
<br>
<div style="border-bottom: green 2px">
    <a id="Nav_items" href="@Url.Action("AddItem", "Product")">
        <button mdbRipple rippleColor="dark" type="button" class="btn btn-outline-success btn-rounded">
            Add Item
        </button>
    </a>
</div>
<br />
<br />

<br>
<h3 style="border-top: 2px solid green;"><a id="Highlight">Available</a> Products</h3>
<br>
<h1><a id="Highlight">ALL</a> Products </h1>
<div class="col-sm-10">
    @using (Html.BeginForm("List", "Product", FormMethod.Get))
     {
      @Html.TextBox("search")
    
        <button mdbRipple rippleColor="dark" value="Search" type="submit" class="btn btn-outline-success btn-rounded"> 
            Search Item
        </button>
        <br />
     }
    <table class="table table-bordered " id="TableItems">
        <thead>
            <tr style="color: white;">
                <th>Name</th>
                <th>Price</th>
                <th>Remove / Update</th>
        </thead>
        <tbody>
            @foreach (var product in Model)
             {
                <tr style="color: white;">
                    <td>@product.Name.ToString()</td>
                    <td>@product.Price.ToString("C")</td>

                    <td>
                        <a style="text-decoration: none;color: green" onclick="return confirm('Are you sure you want to delete this item?');"
                           href="@Url.Action("Delete", "Product", new { id = product.ProductID })">
                            Delete
                        </a>

                        <a style="text-decoration: none;color: green"
                           href="@Url.Action("Update", "Product", new { id = product.ProductID })">
                            Update
                        </a>
                    </td>

                </tr>
             }

        </tbody>
    </table>
</div>

