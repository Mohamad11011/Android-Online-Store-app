@model Testing1.Models.Product
@{
    ViewBag.Title = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="login-box">
    <h2>Update Item</h2>
    @using (Html.BeginForm("Update", "Product", FormMethod.Post, new { id = Model.ProductID, enctype = "multipart/form-data" }))
    {
        <div class="user-box">
            @Html.LabelFor(m => m.Name, new { @class = "col-md-3 control-label" })
            <br />
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
            </div>
        </div>
        <div class="user-box">
            @Html.LabelFor(m => m.Price, new { @class = "col-md-3 control-label" })
            <br />
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Price, new { @class = "form-control" })
            </div>
        </div>
        <div class="user-box">
            @Html.LabelFor(m => m.Category, new { @class = "col-md-3 control-label" })
            <br />
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Category, htmlAttributes: new { style = " height:30px;width:280px " })
            </div>
        </div>
        <br />
        <button mdbRipple rippleColor="dark" value="submit"
                type="submit" class="btn btn-outline-success btn-rounded">
            Update
        </button>
    }
