<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link rel="stylesheet" href="~/Content/Site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Titillium+Web:wght@300&display=swap" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/default.css")" media="screen" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>

<body>

    <nav id="navbar" class="navbar navbar-expand-sm navbar-toggleable-sm navbar  box-shadow mb-3" style="border-bottom-color:  green ;">
        <div class="container">
            <img style="width:30px;height:30px;" src="~/favicon.ico" />
            <a class="navbar_head ">
                Techno Da7hye
            </a>

            <span class="v-line"></span>
            <div class="navbar-collapse  d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li id="listitems">
                        @*Html.ActionLink("Home", "Index", "Home", new { @style = "color:white;text-decoration:none;" })*@
                        <a id="Nav_items" href="@Url.Action("Index", "Home")">Home</a>
                    </li>
                    <li id="listitems">
                        <a id="Nav_items" href="@Url.Action("List", "Product")">Shop</a>
                        @* @Html.ActionLink("Product", "List", "Product", new { @style = "color:white;text-decoration:none;" })</li>*@
                    <li id="listitems">
                        @* @Html.ActionLink("About", "About", "Home", new { @style = "color:white;text-decoration:none;" })*@
                        <a id="Nav_items" href="@Url.Action("About", "Home")">About</a>
                    </li>
                    <li id="listitems">
                        @* @Html.ActionLink("Contact", "Contact", "Home", new { @style = "color:white;text-decoration:none;" })*@
                        <a id="Nav_items" href="@Url.Action("Contact", "Home")">Contact</a>
                    </li>
                    <li id="listitems">
                        <a id="Nav_items" href="@Url.Action("MyCart", "Cart")">Cart</a>
                        @*  @Html.ActionLink("Cart", "Cart", "Cart", new { @style = "color:white;text-decoration:none;" })*@
                    </li>

                </ul>
                @Html.Partial("_LoginPartial")


            </div>

        </div>
    </nav>


    <div class="container">
        <main role="main" class="pb-3">
            <style>
                body {
                    background-color: #070707;
                    color: white;
                }
            </style>
            @RenderBody()
        </main>

    </div>


    <div class="footer-dark" style="border-top: 2px solid green;">
        <footer>
            <div class="container">
                <div class="row">
                    <div class="col-sm-6 col-md-3 item">
                        <h3>Services</h3>
                        <ul>
                            <li><a asp-area="" asp-controller="Product" asp-action="List">Shop</a></li>
                            <li><a href="#">Delivery</a></li>
                            <li><a asp-area="" asp-controller="Home" asp-action="Contact">Support</a></li>
                        </ul>
                    </div>
                    <div class="col-sm-6 col-md-3 item">
                        <h3>About</h3>
                        <ul>
                            <li><a href="@Url.Action("About", "Home")">Company</a></li>
                            <li><a href="@Url.Action("About", "Home")#Squad">Team</a></li>
                            <li><a href="@Url.Action("Contact", "Home")#MapTitle">Locate Us on Map</a></li>
                        </ul>
                    </div>
                    <div class="col-md-6 item text">
                        <h3>TECHNO DA7YE</h3>
                        <p> Our team is full of experts from different regions who are professionals in sales and trained to serve our customers in the best way possible.</p>
                    </div>
                    <div class="col item social" style="text-align: center;">
                    <a href="https://www.facebook.com/">
                        <i class="icon ion-social-facebook"></i>
                    </a>
                    <a href="https://twitter.com/">
                        <i class="icon ion-social-twitter"></i>
                    </a>
                    <a href="https://www.instagram.com/accounts/login/">
                        <i class="icon ion-social-instagram"></i>
                    </a>
                    <a href="https://www.whatsapp.com/">
                        <i class="fab fa-whatsapp"></i>
                    </a>
                    </div>
                </div>
                <p class="copyright">Techno Da7ye © 2021</p>
            </div>
        </footer>
    </div>


    @Scripts.Render("~/bundles/jquery")
    @*@Scripts.Render("~/bundles/bootstrap")*@
    @RenderSection("scripts", required: false)

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/js/bootstrap.bundle.min.js"></script>
</body>

</html>
